<h1>Anda berada di halaman contact</h1>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2 class="mt-3">Daftar contacts</h2>
            <table class="table">

                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No.Hp</th>
                    <th scope="col">Details</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0) { %>
                    <div class="alert alert-danger" role="alert">
                      Data masih kosong
                    </div>
                  <% } %>
                  <% let no=1 %>
                  <% contacts.forEach((contact) => {  %>
                    <tr>
                      <th scope="row"><%= no++ %></th>
                      <td><%= contact.nama %></td>
                      <td><%= contact.nohp %></td>
                      <td>
                          <a href="/contact/<%= contact.nama %>" class="btn bg-danger badge">Detail</a>
                      </td>
                    </tr>
                  <% }) %>
                  
                </tbody>

              </table>
        </div>
    </div>
</div>
   